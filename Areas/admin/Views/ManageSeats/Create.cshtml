@model CinemaWeb.Models.Seat

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Thêm ghế cho phòng</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin">Trang Chủ</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "ManageScheduleSeats")">Ghế </a></li>
                    <li class="breadcrumb-item active">Thêm ghế </li>
                </ol>
            </div>
        </div>
    </div>
</section>
<!-- /.container-fluid -->
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    @using (Html.BeginForm("Create", "ManageSeats", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="card card-success" id="main-card">
                <div class="card-header">
                    <h3 class="card-title">Thông tin ghế</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <div class="form-group">
                    <div class="card-body">
                        <div class="row form-group">
                            <div class="row">
                                <div class="col-6">
                                    <label for="name" style="align-self: end">Hàng ghế</label>
                                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                                    <div class="col-6">
                                        <label for="type" style="align-self: end">Loại ghế</label>
                                        @Html.EditorFor(model => model.type, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.type, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-6">
                                        <label for="price" style="align-self: end">Giá ghế</label>
                                        @Html.EditorFor(model => model.price, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.price, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-6">
                                        <label for="quality" style="align-self: end">Số lượng ghế</label>
                                        @Html.EditorFor(model => model.quality, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.quality, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="col-6">
                                        <label for="id_roon" style="align-self: end">Rạp</label>
                                        @Html.DropDownList("id_room", null, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.id_room, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
        </div>

        <!-- /.container-fluid -->

        <div class="content-header">
            <button type="submit" class="btn btn-success">Thêm</button>
            <a href="@Url.Action("Index", "ManageSeats")">
                <button type="button" class="btn btn-dark">Quay về</button>
            </a>
        </div>
    }
</section>
<!-- /.content -->
