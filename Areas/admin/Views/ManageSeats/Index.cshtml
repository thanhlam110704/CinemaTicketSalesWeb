@model IEnumerable<CinemaWeb.Models.Seat>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Danh sách ghế</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin">Trang Chủ</a></li>
                    <li class="breadcrumb-item active">Danh sách ghế</li>
                </ol>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <!-- Card Header -->
                <div class="card-header">
                    <a href="@Url.Action("Create", "ManageSeats")" class="text-light">
                        <button type="button" class="btn btn-success col-2">Thêm ghế</button>
                    </a>
                </div>
                <!-- Card Body -->
                <div class="card-body">
                    <div class="input-group input-group-sm ml-auto" style="width: 185px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                        </div>
                    </div>
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Hàng ghế</th>
                                <th>Loại ghế</th>
                                <th>Giá</th>
                                <th>Số lượng</th>
                                <th>Rạp</th>
                                <th>Chức năng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ var STT = 1; }
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.Raw(STT++)
                                    </td>
                                    <td style="text-align: start">
                                        @Html.DisplayFor(modelItem => item.name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.type)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.price)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.quality)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Room.name)
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Edit", "ManageSeats", new { id = item.id })"><button type="button" class="btn btn-block btn-sm btn-success">Sửa</button></a>
                                        <a href="@Url.Action("Details", "ManageSeats", new { id = item.id })"><button type="button" class="btn btn-block btn-sm btn-primary">Chi tiết</button></a>
                                        <a href="@Url.Action("Delete", "ManageSeats", new { id = item.id })"><button type="button" class="btn btn-block btn-sm btn-danger">Xóa</button></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- /.container-fluid -->
<!-- /.content -->

@section Scripts {
    <!-- DataTables -->
    <script src="~/Areas/admin/wwwroot/plugins/datatables/jquery.dataTables.js"></script>
    <script src="~/Areas/admin/wwwroot/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>

}
