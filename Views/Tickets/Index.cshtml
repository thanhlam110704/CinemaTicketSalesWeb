@model IEnumerable<CinemaWeb.Models.Ticket>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <!-- DataTables -->
    <link rel="stylesheet" href="~/Areas/admin/wwwroot/plugins/datatables-bs4/css/dataTables.bootstrap4.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <style>
       
        a {
            text-decoration: none;
            color: unset;
            font-family: 'Poppins', sans-serif;
        }
        *{
            padding:0px;
        }
            a:hover{
                color: var(--main-color);
            }
        span:hover {
            color: var(--main-color);
        }
        body{
        font-family: "Cairo", sans-serif;
        background-color: var(--body-bg);
        color: var(--text-color);
        padding-top: var(--nav-height);
        }
        h2, h2 {
            font-size: calc(1.325rem + .9vw);
            color: black;
            font-weight:600;
        }
        table th,
        table td {
            text-align: center !important;
        }
    </style>
</head>
<body>
   
    <section class="content" style="margin-top:10px">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <!-- Card Body -->
                    <div class="card-body">
                        <h2 style="margin-top:20px">Chi tiết vé</h2>
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>ID_Bill</th>
                                    <th>Tên vé</th>
                                    <th>Giá vé</th>
                                    <th>Trạng thái</th>
                                    <th>Rạp</th>
                                    <th>Tên phim</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ var STT = 1; }
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.Raw(STT++)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.id_bill)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.seat)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.price)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.status)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ScheduleTime.Schedule.Room.name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ScheduleTime.Schedule.Movie.name)
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /.container-fluid -->
    <!-- /.content -->
    <!-- DataTables -->
    <script src="~/Areas/admin/wwwroot/plugins/datatables/jquery.dataTables.js"></script>
    <script src="~/Areas/admin/wwwroot/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>

</body>